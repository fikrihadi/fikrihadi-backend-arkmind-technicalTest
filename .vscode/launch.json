{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug app.ts",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect",
          "-r",
          "ts-node/register"
        ],
        "args": [
          "app.ts"
        ],
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  